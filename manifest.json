{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "AlphaClean",
    "version": "1.0",
    "manifest_version": 2,

    //recommended
    "description": "A tool to clean local, session storage.",
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "html/main.html"
    },

    //additional
    "homepage_url": "http://google.com/",
    "permissions": [
        "contentSettings",
        "cookies",
        "history",
        "storage",
        "activeTab",
        "tabs",
        "activeTab",
        "downloads",
        "https://*/",
        "http://*/"
      ]
}
